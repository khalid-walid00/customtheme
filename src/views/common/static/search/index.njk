<div 
    :class="Modal.open && Modal.type === 'search' ? 'fixed w-full h-screen bg-black bg-opacity-25 z-[9999]' : 'hidden'"
>
    <div class="relative w-full h-full flex items-center justify-center">
        <i 
            x-on:click="toggle('search')" 
            class="absolute top-[60px] right-[60px] cursor-pointer text-5xl text-white fi fi-rr-circle-xmark"
        ></i>

        <div class="w-7/12 bg-mainColor h-[80px] items-center rounded-mainRadius justify-center p-2 flex gap-4">
            <input 
            @keydown.enter="searchProducts(search)" 
               x-model="search"
                placeholder="ابحث عن المنتجات..." 
                class="flex-1 outline-none h-[64px] bg-white rounded-mainRadius py-3 px-6" 
                type="text"
            >
            <i x-on:click="searchProducts(search)" class="fi cursor-pointer flex self-center fi-rr-search text-2xl text-white"></i>
        </div>
    </div>
</div>
