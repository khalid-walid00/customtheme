{# card  products #}
{% macro cardSection1(category="",slug="",image="images/card1.webp", price="", discount="", priceBeforeDiscount="", rating=0,image="",id='',type="") %}

   <div class="border border-pink rounded-md group relative  ">
    <div class="p-5 group relative">
        <a href="/product/{{slug}}">
            <img src={{image}} class="w-full lg:h-72 xl:h-72 md:h-52 sm:h-64 h-40 object-cover" alt="{{ category }}">
        </a>
        {% if type !== "category" %}
        <span onclick="Qumra.cart.addItem('{{id}}')" id="add-to-cart-{{ id }}" class="border bg-brown hover:bg-black absolute right-[20%] transform translate-y-[100%] 
        group-hover:translate-y-[calc(100%_-_100px)] group-hover:opacity-100 opacity-0 transition-all duration-300 
         rounded-full flex items-center justify-center p-[0.5rem] cursor-pointer" style="transition:300ms;">
            <i class="fa-solid fa-plus text-white"></i>
        </span>
        {% endif %}
        <a href="/product/{{slug}}">
            <span id="view-product-{{ id }}" style="transition:400ms;" class="border bg-white absolute right-[38%] transform translate-y-[100%]
             group-hover:translate-y-[calc(100%_-_100px)] group-hover:opacity-100 opacity-0
              transition-all duration-300 rounded-full flex items-center justify-center p-[0.5rem] hover-bg-brown hover:text-white">
