{% extends "layouts/layout.njk" %}

{% block content %}
<div class=" min-h-screen justify-center flex flex-col gap-10 container pb-10 pt-8 md:pt-[60px]">
    {% if context.products and context.products.length > 0 %}
    <div class="flex flex-col gap-2">
            <qumra-animation always="false" animation="slide-right fade">
                <h1 class="font-bold text-2xl">{{context.page.title}}</h1>
                <p x-show="window.__qumra__?.context?.search?.q" class="text-subColor">
                    نتائج البحث عن: "{{context.search.q}}"
                </p>
            </qumra-animation>
    </div>
    <div class="min-h-screen">
    
        <div class="grid xl:grid-cols-5 lg:grid-cols-4 sm:grid-cols-3 grid-cols-2 gap-3 lg:gap-4">
            {% for  item  in context.products %}
            <qumra-animation always="false" animation="slide-bottom fade">
                <qumra-product-card product='{{item | dump}}'></qumra-product-card>
            </qumra-animation>
            {% endfor %}
        </div>
    </div>
    {% else %}
    <div class="flex min-h-screen flex-col items-center justify-center gap-3">
        <i style="font-size: 7rem" class="fi flex items-center fi-rr-drawer-empty"></i>
        <div class="text-[#777777] text-[32px] font-bold">لا توجد نتائج</div>
    </div>
    {% endif %}
    
</div>

{% endblock %}
