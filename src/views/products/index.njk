{% extends "layouts/layout.njk" %}

{% block content %}
<div class=" flex flex-col gap-10 container px-0 ">
    <div class=" flex flex-col gap-2">
        <h1 class=" font-bold text-2xl">{{context.page.title}}</h1>
        <p class="">{{context.page.description}}</p>
    </div>
   <div class=" flex  flex-wrap gap-5 md:justify-start justify-center">
    {%for item in context.products%}
    <qumra-product-card
    name={{item.title}}
    slug={{item.slug}}
    description=" سيارة الدفع الرباعي الكبيرة، قوية وواسعة، متنقلة للعائلات والرحلات"
    image={{item.images[0].imageUrl}}
    main-color="{{global.app.settings.mainColor}}"
    button-text="اضافة للسلة"
    price="{{item.price | money}}"
  ></qumra-product-card>
  {%endfor%}

   </div>
</div>
{% endblock %}